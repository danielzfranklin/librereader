<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/seeker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seeker"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/overviewSeekerMarginX"
        android:layout_marginTop="@dimen/overviewMinMarginBetweenPagesAndSeeker"
        android:layout_marginEnd="@dimen/overviewSeekerMarginX"
        android:layout_marginBottom="@dimen/overviewSeekerMarginBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pages"
        app:layout_constraintTop_toBottomOf="@+id/pages" />
</androidx.constraintlayout.widget.ConstraintLayout>