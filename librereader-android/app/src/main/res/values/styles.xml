<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dark" parent="Base.ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="AppTheme.Toolbar.Popup" parent="ThemeOverlay.MaterialComponents.Light"/>

    <!-- From <https://github.com/material-components/material-components-android/issues/272#issuecomment-505460391 -->
    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">5dp</item>
        <item name="iconGravity">textStart</item>
<!--        <item name="rippleColor">@android:color/transparent</item>-->
<!--        <item name="android:shadowColor">@android:color/transparent</item>-->
<!--        <item name="strokeColor">@android:color/transparent</item>-->
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>